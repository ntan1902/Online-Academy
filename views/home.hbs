<div class="topCourse">
    <div class="container">
        <h3>Top courses in week</h3>

        <!-- Carousel -->
        <div class="owl-carousel owl-theme myCarousel">

            <!-- Carousel items -->
            {{#each courses }}
                <div class="product-grid4 h-100">
                    <div class="product-image4">
                        <a href="#">
                            <img class="pic-1" style="height: 150px; width:255px" src="{{imagePath}}">
                            <img class="pic-2" style="height: 150px; width:255px" src="{{imagePath}}">
                        </a>
                        <ul class="social">
                            <li><a href="/admin/courses/edit/{{idCourse}}" data-tip="Quick View" role="button"><i
                                        class="fa fa-eye"></i></a></li>
                            <li><a href="/courses/detail/{{idCourse}}" data-tip="Like the course" role="button"><i
                                        class="fa fa-heart"></i></a></li>
                            <li><a href="#" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                        <span class="product-new-label">New</span>
                        <span class="product-discount-label">-10%</span>
                    </div>
                    <div class="product-content">
                        <h3 class="title"><a href="">{{title}}</a></h3>
                        <span class="teacher"><a href="">{{fullname}}</a></span>
                        <ul class="rating">
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star disable"></li>
                            <li class="fa fa-star disable"></li>
                        </ul>
                        <div class="price">
                            ${{price}}
                            <span>$5.00</span>
                        </div>
                        <a class="add-to-cart" href="#">ADD TO CART</a>
                    </div>
                </div>
