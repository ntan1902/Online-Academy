<div class="card">
  <div class="card-header d-flex justify-content-between">
    <h4>Couses</h4>
    <a class="btn btn-outline-success" href="/admin/courses/add" role="button">
        Insert
    </a>
  </div>
  <div class="card-body">
    {{#if this.empty}}
    <h5 class="card-title">There is no data</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    {{else}}
    <div class="card shadow">
      <div class="row">
        {{#each this.categories}}
        <div class="col-sm-3 mb-3">
          <div class="card h-100">
            <img src="/public/imgs/sp/{{idCourse}}/main_thumbs.jpg" alt="{{idCourse}}" title="{{idCourse}}"
              class="card-img-top">
            <div class="card-body">
              <h6 class="card-title">{{field}}</h6>
              <h5 class="card-title text-danger">{{description}}</h5>
              <p class="card-text">{{detail}}</p>
            </div>
            <div class="card-footer text-muted">
              <a class="btn btn-sm btn-outline-primary" href="/admin/courses/edit/{{idCourse}}" role="button">
                <i class="fa fa-eye" aria-hidden="true"></i>
                Details
              </a>
              <a class="btn btn-sm btn-outline-success" href="#" role="button">
                <i class="fa fa-cart-plus" aria-hidden="true"></i>
                Add to cart
              </a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}
  </div>
</div>