<div class="card shadow">

  <div class="card-header d-flex justify-content-between">
    <h4>Courses</h4>
    <a class="btn btn-outline-success" href="/admin/courses/add" role="button">
      <i class="fa fa-plus" aria-hidden="true"></i>
      Add Course
    </a>
  </div>
  <div class="card-body">
    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Field</th>
          <th>ID Teacher</th>
          <th>Price</th>
          <th>Status</th>
          <th>Edit</th>
        </tr>
      </thead>

      <tfoot>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Field</th>
          <th>ID Teacher</th>
          <th>Price</th>
          <th>Status</th>
          <th>Edit</th>
        </tr>
      </tfoot>

      <tbody>
        {{#each this.courses}}
          <tr>
            <th scope="row">{{idCourse}}</th>
            <td>{{title}}</td>
            <td>{{name}}</td>
            <td>{{idTeacher}}</td>
            <td>{{price}}</td>
            <td>{{status}}</td>
            <td>
              <a name="" id="" class="btn btn-sm btn-primary" title="Edit" href="/admin/courses/edit/{{idCourse}}"
                role="button">
                <i class="fa fa-pencil" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>

    </table>
  </div>

</div>