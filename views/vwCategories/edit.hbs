<form method="POST">
  <div class="card">
    <div class="card-header">
      <h4>Category</h4>
    </div>
    <div class="card-body">
      <div class="form-group">
        <label for="txtCatID">#</label>
        <input type="text" class="form-control" id="txtCatID" name="idCategory" readonly value="{{this.category.idCategory}}">
      </div>
      <div class="form-group">
        <label for="txtCatName">Category</label>
        <input type="text" class="form-control" id="txtCatName" name="name" autofocus
          value="{{this.category.name}}">
      </div>
    </div>
    <div class="card-footer">
      <a class="btn btn-primary" href="/admin/categories" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to Categories
      </a>
      {{#if isEmpty}}
      <button class="btn btn-danger" type="submit" formaction="/admin/categories/del">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
      {{/if}}
      <button class="btn btn-success" type="submit" formaction="/admin/categories/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </div>
  </div>
</form>