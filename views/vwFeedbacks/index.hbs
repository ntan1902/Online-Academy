{{#section 'js'}}
<script>
    $(document).ready(function () {
        var table = $('#datatable').DataTable({

            dom: 'Bflrtip',
            buttons: [
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-files-o" aria-hidden="true"></i> Copy',
                    className: 'btn-secondary',
                    titleAttr: 'Copy',
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV',
                    className: 'btn-success',
                    titleAttr: 'CSV',
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o" aria-hidden="true"></i> PDF',
                    className: 'btn-danger',
                    titleAttr: 'PDF',
                },
            ]
        });

    });
</script>
{{/section}}
<div class="card shadow">

    <div class="card-header d-flex justify-content-between">
        <h4>Feedback</h4>
        <a class="btn btn-outline-success" href="/admin/feedbacks/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Feedback
        </a>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>User</th>
                    <th>Course</th>
                    <th>Rating Point</th>
                    <th>Rating Date</th>
                    <th>Edit</th>

                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>#</th>
                    <th>User</th>
                    <th>Course</th>
                    <th>Rating Point</th>
                    <th>Rating Date</th>
                    <th>Edit</th>
                </tr>
            </tfoot>

            <tbody>
                {{#each listFeedbacks}}
                <tr>
                    <th scope="row">{{idFeedback}}</th>
                    <td>{{fullname}}</td>
                    <td>{{title}}</td>
                    <td>{{ratingPoint}}</td>
                    <td>{{dateRating}}</td>
                    <td>
                        <a name="" id="" class="btn btn-sm btn-primary" title="Edit"
                            href="/admin/feedbacks/edit/{{idFeedback}}" role="button">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>

</div>