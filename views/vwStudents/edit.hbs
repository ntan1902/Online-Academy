<form method="POST">
    <div class="card">
        <div class="card-header">
            <h4>Student</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="txtID">#</label>
                <input type="text" class="form-control" id="txtID" name="id" readonly
                       value="{{this.student.id}}">
            </div>

            <div class="form-group">
                <label for="txtUsername">Username</label>
                <input type="text" class="form-control" id="txtUsername" name="username" autofocus
                       value="{{this.student.username}}">
            </div>

            <div class="form-group">
                <label for="txtPassword">Password</label>
                <input type="text" class="form-control" id="txtPassword" name="password"
                       value="{{this.student.password}}">
            </div>

            <div class="form-group">
                <label for="txtFullname">Full name</label>
                <input type="text" class="form-control" id="txtFullname" name="fullname"
                       value="{{this.student.fullname}}">
            </div>

            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input type="email" class="form-control" id="txtEmail" name="email"
                       value="{{this.student.email}}">
            </div>

            <div class="form-group">
                <label for="txtDob">Date of Birth</label>
                <input type="date" class="form-control" id="txtDob" name="dob"
                       value="{{this.student.dob}}">
            </div>

            <div class="form-group">
                <label for="txtRole">Role</label>
                <input type="text" class="form-control" id="txtRole" name="role"
                       value="{{this.student.role}}">
            </div>
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" href="/admin/students" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                Back to List
            </a>
            <button class="btn btn-danger" type="submit" formaction="/admin/students/delete">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Delete
            </button>
            <button class="btn btn-success" type="submit" formaction="/admin/students/patch">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </div>
    </div>
</form>