<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" />

    <!-- Bootstrap FontAwesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Font Google API -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Blinker&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">

    <!-- Themify-Icons -->
    <link rel="stylesheet" href="/public/vendors/themify-icons/themify-icons.css">

    <!-- DataTable -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.23/datatables.min.css" />
    <link rel="stylesheet" type="text/css"
        href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.23/b-1.6.5/b-colvis-1.6.5/b-flash-1.6.5/b-html5-1.6.5/b-print-1.6.5/datatables.min.css" />

    <!-- Public Vendors -->
    {{!--
    <link rel="stylesheet" href="/public/vendors/themify-icons/themify-icons.css" /> --}}
    <link rel="stylesheet" href="/public/vendors/linericon/style.css" />
    <link rel="stylesheet" href="/public/vendors/nice-select/nice-select.css" />
    <link rel="stylesheet" href="/public/vendors/owl-carousel/owl.theme.default.min.css" />
    <link rel="stylesheet" href="/public/vendors/owl-carousel/owl.carousel.min.css" />


    <link rel="stylesheet" href="/public/css/style.css" />
    <title>Online Academy</title>
    <link rel='icon' href="/public/images/OA-Logo.png">
    {{{_sections.css}}}
</head>

<body>
    {{> headerAdmin}}
    <div class="container-fluid my-5">
        <h4 class="text-warning">Site Administration</h4>
        <div class="row">
            <div class="col-sm-3">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h4>CATALOG</h4>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <div
                                class="list-group-item list-group-item-action {{#if manageUsers}} list-group-item-info {{/if}}">
                                <div class="dropdown">
                                    <a href="/admin/users">
                                        <b>Users</b>
                                    </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/admin/teachers">Teachers</a>
                                        <a class="dropdown-item" href="/admin/students">Students</a>

                                    </div>
                                </div>
                            </div>
                            <div
                                class="list-group-item list-group-item-action {{#if manageCourses}} list-group-item-info {{/if}}">
                                <div class="dropdown">
                                    <a href="/admin/courses">
                                        <b>Courses</b>
                                    </a>
                                    <div class="dropdown-menu">
                                        {{#each listCategories}}
                                        <a class="dropdown-item"
                                            href="/admin/courses/byField/{{this.name}}">{{this.name}}</a>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                            <div
                                class="list-group-item list-group-item-action {{#if manageCategories}} list-group-item-info {{/if}}">
                                <div class="dropdown">
                                    <a href="/admin/categories">
                                        <b>Categories</b>
                                    </a>
                                </div>
                            </div>
                            <div
                                class="list-group-item list-group-item-action {{#if manageFeedbacks}} list-group-item-info {{/if}}">
                                <div class="dropdown">
                                    <a href="/admin/feedbacks">
                                        <b>Feedbacks</b>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-9">
                {{{body}}}
            </div>
        </div>
    </div>

    {{> footer}}
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>

    <!-- Sweet Alert2-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.12.5/dist/sweetalert2.all.min.js"></script>

    <!-- DataTable-->
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.23/datatables.min.js">
    </script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript"
        src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.23/b-1.6.5/b-colvis-1.6.5/b-flash-1.6.5/b-html5-1.6.5/b-print-1.6.5/datatables.min.js"></script>

    <!-- Public Vendors -->
    <script src="/public/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="/public/vendors/nice-select/jquery.nice-select.min.js"></script>
    <script src="/public/js/main.js"></script>

    {{{_sections.js}}}
</body>

</html>