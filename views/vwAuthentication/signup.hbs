<div class="container mt-5">
    <div class="d-flex justify-content-center h-100">
        <div class="card card-signup">
            <div class="card-header d-flex justify-content-center">
                <h3 class="pt-2 text-white">Sign Up</h3>
            </div>
            <div class="card-body">
                <form>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>
                        </div>
                        <input type="text" class="form-control my-input" placeholder="Username">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                        </div>
                        <input type="email" class="form-control my-input" placeholder="Email" autocomplete="off">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-key" aria-hidden="true"></i></span>
                        </div>
                        <input type="password" class="form-control my-input" placeholder="Password">
                    </div>
                    <div class="form-group d-flex justify-content-center mt-3">
                        <button class="btn btn-login w-100" type="submit">
                            <i class="fa fa-user-plus fa-2x" aria-hidden="true"></i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Already have an account?<a href="/login">Log In</a>
                </div>
            </div>
        </div>
    </div>
</div>